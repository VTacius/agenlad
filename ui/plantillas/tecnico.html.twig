{% extends "layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}

{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}

  <div class="span12">
    <h2>Directorio Minsal</h2>
    <p>Utilidades para primera linea de apoyo<br>
    Bienvenido <b>{{rol}} {{usuario}}</b></p>
</div>
{% endblock %}

{% block contenido -%}
    {{ parent() }}
    <form class="form-horizontal" role="form" id="usuarioform" tabindex="0" action="/mostrarpass/datos" method="POST">
        <div class="form-group">
            <div class="col-lg-12">
                <input class="form-control input-lg" id="usuarioCliente" name="usuarioCliente" placeholder="Nombre del Usuario">
            </div>
        </div>
        <div class="input-group input-group-lg col-lg-12">
            <button class="btn btn-lg btn-success" id="enviar" tabindex="1" role="button">Contrase√±a!</button> 
        </div>
    </form>
    {% if datos %}
        <h2 id="psswduser">{{datos.psswduser}}</h2>	
        <h3 id="nameuser">{{datos.nameuser}}</h3>
        <h3 id="localidad"><b>{{datos.oficina}}</b> en <b>{{datos.localidad}}</b></h3>
        <h3 id="cuentastatus">{{datos.cuentastatus}}</h3>	
        <h3 id="buzonstatus">{{datos.buzonstatus}}</h3>
        <h3 id="grupouser">{{datos.grupouser}}</h3>
    {% endif %}
    {% if mensajeError %}
    <div class="col-lg-8 alert alert-error" id="advertencia">
        <ul class="list-unstyled">
            <li class="invalid"><strong>{{mensajeError}}</strong></li>
        </ul>
    </div>
    {% endif %}
{% endblock %}