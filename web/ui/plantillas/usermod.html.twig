{% extends "base/layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}
{% block javascript -%}
    <script src="{{ activos('js/controladores/usermodControl.js') }}" type="text/javascript"></script>
{% endblock %}

{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}
    <h3>Modificación de usuarios</h3>
    <p>Modificación de usuarios Institucionales<br>
    Bienvenido <b>{{titulo}} {{usuario}}</b></p>
{% endblock %}

{% block contenido -%}
    {{ parent() }}
    <h1>Aquí modificamos usuarios</h1>
    <form class="form-horizontal" role="form" method="POST" id="formbusqueda">
        <div class="form-group">
            <label for="uid" class="col-md-3 text-left">Nombres</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="nombreUsuario" name="nombreUsuario" placeholder="Nombre o usuario a buscar" autofocus autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label for="o" class="col-md-3 text-left">Apellidos</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="apellidoUsuario" name="apellidoUsuario" placeholder="Establecimiento" autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label for="ou" class="col-lg-3 text-left">Oficina</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="oficinaUsuario" name="oficinaUsuario" placeholder="Oficina" autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label for="ou" class="col-lg-3 text-left">Establecimiento</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="establecimientoUsuario" name="establecimientoUsuario" placeholder="Establecimiento" autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label for="ou" class="col-lg-3 text-left">Estado de la Cuenta de Correo</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="estadoCuenta" name="establecimientoUsuario" placeholder="Oficina" autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label for="ou" class="col-lg-3 text-left">Estado del Buzón de Correo</label>
            <div class="col-lg-9">
                <div class="btn-group btn-toggle"> 
                    <button class="btn btn-lg btn-default">ON</button>
                    <button class="btn btn-lg btn-primary active">OFF</button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="ou" class="col-lg-3 text-left">Establecimiento</label>
            <div class="col-lg-9">
                <input type="text" class="form-control input-x" id="establecimientoUsuario" name="establecimientoUsuario" placeholder="Oficina" autocomplete="off">
            </div>
        </div>
        <div class="form-group">
            <label id="resultado" class="col-lg-12 text-left"></label>
        </div>
    </form>
{% endblock %}
