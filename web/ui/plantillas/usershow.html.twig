{% extends "base/layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}
{% block css -%} 
    <link href="{{ activos('css/jumbotron.css') }} " rel="stylesheet">
    <link href="{{ activos('css/usershow.css') }} " rel="stylesheet">
{% endblock %}
{% block javascript %} 
    <script src="{{ activos('js/controladores/usershowControl.js') }}" type="text/javascript"></script>
{% endblock %}
{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}
    <h3>Revisión de usuarios</h3>
    <p>Utilidades para primera linea de apoyo<br>
    Bienvenido <b>{{titulo}} {{usuario}}</b></p>
{% endblock %}

{% block contenido -%}
    {{ parent() }}
    <form class="form-horizontal" role="form" id="usuarioform" tabindex="1" autofocus action="/mostrarpass/datos" method="POST">

        <div class="form-group">
            <div class="col-lg-12">
                <input class="form-control input-lg" id="usuarioCliente" name="usuarioCliente" placeholder="Nombre del Usuario">
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-lg btn-primary" id="enviar" tabindex="1" role="button">Contraseña!</button> 
        </div>
    </form>

    <dl class="dl-horizontal" id="respuesta">
        <h2><dt>Contraseña:</dt>
            <dd><b class="contraseniaTecnico" id="psswduser">{{datos.psswduser}}</b>
                {% if rol=="admon"%}
                    <a class="enlaceTecnico" id="usermodTecnico" href="/usermod">Modificar Usuario</a>
                {% endif %}
            </dd></h2>
        <h4><dt>Nombre de usuario:</dt>
        <dd id="nameuser">{{datos.nameuser}}</dd>
        <dt>Localidad:</dt>
        <dd><b id="oficina">{{datos.oficina}}</b> en <b id="localidad">{{datos.localidad}}</b></dd>
        <dt>Estado de la Cuenta:</dt>
        <dd id="cuentastatus">{{datos.cuentastatus}}</dd>
        <dt>Estado del Buzón:</dt>
        <dd id="buzonstatus">{{datos.buzonstatus}}</dd>
        <dt>Grupo Principal:</dt>
        <dd id="grupouser">{{datos.grupouser}}</dd></h4>
    </dl>
    {% if rol=="admon"%}
        <div class="form-group text-center">
            <a class="useraddTecnico" id="useraddTecnico" href="/useradd">¿Desea agregar al usuario?</a>
        </div>
    {% endif %}
    
    {% if mensajeError %}
    <div class="col-lg-8 alert alert-error" id="advertencia">
        <ul class="list-unstyled">
            <li class="invalid"><strong>{{mensajeError}}</strong></li>
        </ul>
    </div>
    {% endif %}
{% endblock %}