{% extends "base/layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}
{% block javascript -%}
{% endblock %}

{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}
    <h3>Configuracion</h3>
    Bienvenido <b>{{titulo}} {{usuario}}</b></p>
{% endblock %}

{% block contenido -%}
  {{ parent() }}
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Dominio</th><th>Descripcion</th><th>Configuracion</th>
        </tr>
        </thead>
        <tbody id=respuesta>
        {% for usuario in datos %}
            <tr>
                <td>{{ usuario.user }}</td>
                <td>{{ usuario.rol}}</td>
                <td>{{ usuario.dominio}}</td>
            </tr> 
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
