{% extends "layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}

{% block lateral %}
Contenido a mostrar a la izquierda
{{ pagina }}
{% endblock %}

{% block menu %} 
    {% include 'menu.html.twig' with {'menu': menu  } %}  
{% endblock %}

{% block contenido -%}
  {{ parent() }}
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Nombre</th><th>Correo</th><th>Puesto</th>
            </tr>
        </thead>
        <tbody id=respuesta>
        {% for empleado in empleados %}
            <tr>
                <td>{{ empleado.cn }}</td><td>{{ empleado.mail }}</td><td>{{ empleado.title }}</td>
            </tr> 
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
