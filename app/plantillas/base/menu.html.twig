{% for key, item in menu %}
    {% if item is iterable %}
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{key}} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                {% for clave, element in item %}
                    <li><a href="/{{clave}}"> {{element}} </a></li>
                {% endfor %}
            </ul>
        </li>
    {% else %}
        {% if key == pagina %}
            <li class="active"><a href="/{{key}}"> {{item}}</a></li>
        {% else %}
            <li><a href="/{{key}}"> {{item}} </a></li>
        {% endif %}
    {% endif %}
{% endfor %}
    
