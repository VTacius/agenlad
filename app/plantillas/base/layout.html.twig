<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Directorio Telefónico en PHP">
    <meta name="author" content="Alexander Ortiz">
    <link rel="shortcut icon" href="/resources/favicon.ico">
    <title>Directorio MINSAL - {% block titulo %}  {# Personalizamos titulo #} {% endblock%}</title>
    <link href="{{ activos('css/vendor/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ activos('css/vendor/jquery-ui.min.css') }}" rel="stylesheet">
    <link href="{{ activos('css/agenlad.css') }}" rel="stylesheet">
    {% block css %} {% endblock %}
  </head>
  <body>
    {% spaceless %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Directorio MINSAL</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                {% block menu %} 
                    {% include 'base/menu.html.twig' with {'menu': menu, 'pagina': pagina } %}
                {% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/login/final">Cerrar Sesión</a></li>
                </ul>
            </div><!--/.navbar-collapse -->
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3" id="clateral">
                {% block lateral %}  
                {%endblock %}
            </div>
            <div class="col-lg-9">
                {% block contenido %} 
                    <div class="text-center" id="mensaje" name=mensaje" > 
                    </div>
                {%endblock %} 
                <div class="text-center" id="error" name="error">
                </div>
            </div>
        </div>
        <div class="form-group text-center" id="espera" name="espera" style="display: none">
            <img src="{{ activos('resources/loader.gif') }}" alt="espere..." class="img-circle">
        </div>
        <div class="row">
            <footer class="span12">
            <hr>
                <p class="text-center text-info">DTIC - Unidad de Redes y Seguridad Informática 2014  </p>
            </footer>
        </div>
    </div>
    {% endspaceless %}
  </body>
    <script src="{{ activos('js/vendor/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/vendor/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/vendor/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/vendor/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/vendor/messages_es.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/vendor/jquery.mask.min.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/controladores/agenlad.js') }}" type="text/javascript"></script>
    {% block javascript %} {% endblock %}
    
</html>
