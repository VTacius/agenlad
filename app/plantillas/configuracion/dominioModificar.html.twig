{% extends "base/layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}
{% block javascript -%}
    <script src="{{ activos('js/confdominioModificar.js') }}" type="text/javascript"></script>
{% endblock %}
{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}
    <h3>Configuracion de Dominios</h3>
    Bienvenido <b>{{titulo}} {{usuario}}</b>

{% endblock %}

{% block contenido -%}
    {{ parent() }}
    {% include 'configuracion/dominio.form.twig' with {'legenda': "Modificacion para dominio", 'datos': datos} %}
    <div id="dialogo" style="display: none">
        <form role="form">
            <div class="form-group">
                    <label for="password_set">Contraseña</label>
                    <input type="password" class="form-control" id="password_set" name="password_set" required placeholder="" autocomplete="off" >
            </div>
            <div class="form-group">
                    <label for="password_confirm">Confirme Contraseña</label>
                    <input type="password" class="form-control" id="password_confirm" name="password_confirm" required autocomplete="off" >
            </div>
            <label id="dialogo_mensaje" style="display: none"></label>
            <img id="cargador" src="/ui/resources/loader.gif" alt="espere..." class="img-circle" style="display: none">
        </form>
    </div>
{% endblock %}
