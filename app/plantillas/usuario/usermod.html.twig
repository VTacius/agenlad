{% extends "base/layout.html.twig" %}
{% block titulo -%}Listado de usuarios{% endblock %}
{% block css -%} 
    <link href="{{ activos('css/jumbotron.css') }} " rel="stylesheet">
{% endblock %}
{% block javascript %} 
    <script src="{{ activos('js/controladores/usermodControl.js') }}" type="text/javascript"></script>
    <script src="{{ activos('js/controladores/controlesubicacion.js') }}" type="text/javascript"></script>
    {% if datos %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("#busqueda").hide();
            $("#mailModForm").show();
            $("#userModForm").show();
        });
    </script>
    {% endif %}
{% endblock %}
{# Configuramos las variables que la plantilla padre usa para formar el menu #}
{% set menu = menu %}
{% set pagina = pagina %}

{% block lateral %}
    <h3>Modificacion de usuarios</h3>
    <p>Utilidades para primera linea de apoyo<br>
    Bienvenido <b>{{titulo}} {{usuario}}</b></p>
{% endblock %}

{% block contenido -%}
    {{ parent() }}
    
    <form class="form-horizontal" role="form" id="busqueda" name="busqueda" action="/usermod/envio" method="POST">
        <div class="form-group">
            <div class="col-lg-12">
                <input class="form-control input-lg" id="usuarioModificar" autofocus name="usuarioModificar" placeholder="Nombre del Usuario">
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-lg btn-primary" id="enviar" tabindex="1" role="button">Ir a Modificar!</button> 
        </div>
    </form>
    {% include 'usuario/usermod.form.twig' %}
    {% if rol=="admon"%}
        <div class="form-group text-center" id="creacion">
            <h4><a id="creacion" href="/useradd">Â¿Desea agregar al usuario?</a></h4>
        </div>
    {% endif %}
{% endblock %}
